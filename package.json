{
  "name": "sol",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "bootstrap": "npm install",
    "nx": "nx",
    "start": "nx serve",
    "build": "nx run-many --target=build --all",
    "storybook": "yarn workspace @sol/design-system storybook",
    "lint": "nx run-many --target=lint --all --verbose",
    "lint:fix": "nx run-many --target=lint --all -- --fix",
    "test": "nx run-many --target=test --all",
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md,mdx,html}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md,mdx,html}\""
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
